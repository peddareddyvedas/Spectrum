<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            layout="@layout/activity_toolbaroperation"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_firmware"
                android:layout_height="50dp">
                <com.example.dell.spectrum.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/formware"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_listline_btm"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_currentver"
                android:layout_height="50dp">
                <com.example.dell.spectrum.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/cureentversion"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/ic_listline_btm"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_latestver"
                android:layout_height="50dp">
                <com.example.dell.spectrum.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/latestversion"
                    />
                <com.example.dell.spectrum.FONTS.ButtonFontStyle
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:id="@+id/btn_update"
                    android:text="Update"
                    android:textColor="#5FC8EB"
                    android:textAllCaps="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_versionbg" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/ic_listline_btm"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
      <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      >
          <com.example.dell.spectrum.FONTS.TextViewFontStyle
              android:layout_width="46dp"
              android:layout_height="30dp"
              android:id="@+id/precenttext"
              android:text="0%"
              android:textSize="18dp"
              android:textAlignment="center"
              android:visibility="gone"
              android:textColor="#ffffff"
              android:layout_centerHorizontal="true"
              android:background="@drawable/ic_textbg"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="205dp"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="250dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:id="@+id/progressbar_updatedevice"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_drawableforupdate"
        />
</RelativeLayout>
            </LinearLayout>
</LinearLayout>