<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2">

        <Button
            android:id="@+id/btnleft"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/start_txt_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="9dp"
            android:text="2017"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/btnright"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_rightarrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/l1_glucose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/glucose"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1.7"
            android:gravity="center"
            android:text="glucose(Glu)"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/md"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="mg/dL"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:id="@+id/downarrow"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_down"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginLeft="310dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_btndown"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chart_text"
        android:background="@color/colorWhite"
        android:visibility="gone"
        android:orientation="vertical">
        <com.example.dell.spectrum.FONTS.TextViewFontStyle
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:text="@string/chattext"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp" />
        <com.example.dell.spectrum.FONTS.TextViewFontStyle
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:text="@string/warning"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textSize="20dp" />
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colorBlue" />


    <ListView
        android:id="@+id/testresultlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">

    </ListView>
    </LinearLayout>