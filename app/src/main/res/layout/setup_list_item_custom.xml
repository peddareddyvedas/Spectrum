<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="3dp"
        android:id="@+id/rl_buttons"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:focusable="false"
            android:button="@drawable/radio_button_lang_custom"
            android:id="@+id/radioButton_check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:id="@+id/text_item_name"

            />
    <!--<Button-->
      <!--android:layout_width="30dp"-->
      <!--android:layout_height="30dp"-->
        <!--android:id="@+id/img_custom"-->
        <!--android:clickable="false"-->
        <!--android:focusable="false"-->
      <!--android:layout_toRightOf="@+id/text_item_name"-->
<!--android:layout_marginLeft="20dp"-->
        <!--android:background="@drawable/image_custom"-->
        <!--/>-->


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_buttons"
        android:background="@color/colorPrimary"/>

</RelativeLayout>