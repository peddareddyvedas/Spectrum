        <com.example.dell.spectrum.FONTS.ButtonFontStyle
            android:id="@+id/loginbutton"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/signinbutton"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/l2"
            android:paddingBottom="2dp"
            android:layout_centerHorizontal="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/forgotnew"
            android:layout_marginTop="13dp"
            android:layout_below="@id/loginbutton"
            android:layout_height="40dp">

            <com.example.dell.spectrum.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="Forget password?"
                android:textSize="15sp"
                android:id="@+id/forgotpassword"
                android:layout_marginLeft="35dp"
                android:layout_height="match_parent" />

            <com.example.dell.spectrum.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:id="@+id/newuser"
                android:text="Create an Account"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@id/forgotpassword"
                android:textSize="15sp"
                android:layout_height="match_parent" />
        </RelativeLayout>

   </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_main"
        android:layout_marginTop="70dp">

        <View
            android:id="@+id/view11"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:background="#2196f3"
            />

        <View
            android:id="@+id/view12"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:background="#2196f3" />

        <com.example.dell.spectrum.FONTS.TextViewFontStyle
            android:id="@+id/text_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Login with"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/rl_view"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">
            <ImageButton
                android:layout_width="40dp"
                android:id="@+id/wechat"
                android:background="@drawable/wechat"
                android:layout_height="match_parent"
                android:layout_weight="0.12" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/qq"
                android:background="@drawable/weibo"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/weibo"
                android:background="@drawable/q"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/twitter"
                android:background="@drawable/facebook"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_width="40dp"
                android:id="@+id/google"
                android:background="@drawable/google"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/fb"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:background="@drawable/twitter" />

        </LinearLayout>
    </RelativeLayout>










